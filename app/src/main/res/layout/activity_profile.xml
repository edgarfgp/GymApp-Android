<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.sitecdesarro.gymapp.ui.ProfileActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarProfile"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:popupTheme="@style/Toolbar"
        app:title="Perfil"
        android:elevation="5dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarProfile"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:src="@drawable/profile_user"
        android:layout_gravity="center|top"
        android:elevation="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="132dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="132dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.0"/>

    <EditText
        android:id="@+id/edtProfEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edtProfTelefono"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"/>

    <EditText
        android:id="@+id/edtProfTelefono"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edtProfDireccion"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"/>

    <EditText
        android:id="@+id/edtProfDireccion"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="122dp"/>

    <EditText
        android:id="@+id/edtProfApellido"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="39dp"
        android:enabled="false"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/edtProfEmail"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        android:layout_marginEnd="7dp"/>

    <EditText
        android:id="@+id/edtProfNombre"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="7dp"
        android:layout_marginStart="39dp"
        android:enabled="false"
        app:layout_constraintBottom_toTopOf="@+id/edtProfEmail"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Apellidos"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtProfApellido"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edtProfApellido"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="Nombre"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtProfNombre"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Email      "
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edtProfEmail"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtProfEmail"
        app:layout_constraintHorizontal_bias="0.49"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Teléfono"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edtProfTelefono"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtProfTelefono"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edtProfDireccion"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtProfDireccion"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flotEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_edit"
        tools:layout_constraintBottom_creator="1"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flotSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_save_48px"
        android:visibility="invisible"
        tools:layout_constraintBottom_creator="1"/>


</android.support.constraint.ConstraintLayout>
